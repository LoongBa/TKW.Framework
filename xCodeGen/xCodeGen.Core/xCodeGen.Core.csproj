<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>xCodeGen</RootNamespace>
    <Nullable>disable</Nullable>
    <!-- 禁用可空引用类型（C# 8.0+ 特性） -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AssemblyName>xCodeGen.Core</AssemblyName>
    <RootNamespace>xCodeGen.Core</RootNamespace>
    <GeneratorCacheDir>$(BaseIntermediateOutputPath)/GeneratorCache</GeneratorCacheDir>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="CodeGen.config.json">
      <LogicalName>CodeGen.config.json</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="RazorLight" Version="2.3.1" />
    <PackageReference Include="System.Text.Json" Version="9.0.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\xCodeGen.Abstractions\xCodeGen.Abstractions.csproj" />
  </ItemGroup>

</Project>
